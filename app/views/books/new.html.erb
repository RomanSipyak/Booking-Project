<% @item.books.each do |book| %>
  <div class="container">
    <h2><%= @item.category.title %></h2>
    <div class = "row">
      <div class="col-md-6">
        <ul class="list-group">
          <li class="list-group-item">Price:<%= book.start_booking %></li>
          <li class="list-group-item">Description:<%= book.end_booking %></li>
          <li class="list-group-item">Price:<%= book.total_price %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
<div class="container">
  <div class = 'row'>
   <div class="col-md-4">
   </div>
   <div class="col-md-4">
       <button type="button" class="btn btn-info btn-md " style="margin-top:15px" data-toggle="modal" data-target="#myModal">
         <span class="glyphicon glyphicon-plus btn btn-primary">Add new booking</span>
       </button>
   </div>
   <div class="col-md-4">
   </div>
  </div>

  <!-- Modal -->
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add new Booking</h4>
        </div>
        <div class="modal-body">
          <%= form_for @booking, url: item_books_path do |f| %>
            <div class="form-group">
              <label for="usr">Start Booking:</label>
              <%= f.datetime_select :start_booking %><br>
              <label for="usr">End Booking:</label>
              <%= f.datetime_select :end_booking %><br>
            </div>
            <%= f.submit 'Save' %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
</div>